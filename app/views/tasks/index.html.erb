<%= link_to 'Calendar', calendar_url %>
<%= link_to 'Chat room', 'chats/show' %>

<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">

      <div class="task_form">
        <div class="task_form_title">
        <h1> Add a Task: </h1>
      </div>
        <%= form_for Task.new do |f| %>
        <br>

         <%= f.label :description  %>
         <%= f.text_field :description, :class=>"form_description_box"%>
         <br>
         <br>

         <%= f.label :priority  %>
         <%= f.select :priority, (1..3) %>
         <br>
         <br>

         <%= f.submit 'Add task', :class => 'button'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>


      <div class="container">
        <div class="row">

          <% if @tasks.any? %>
            <% @tasks.reverse.each do |task| %>

          <div class="col-md-4">
            <div class="card-deck">
          <div class="card" style="width: 100%; ">
            <div class="front">
              <div class="cover">
                <img src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/4-col/img%20%2859%29.jpg"/>
              </div>
              <div class="user">
                  <img class="img-circle" src="https://openclipart.org/download/247319/abstract-user-flat-3.svg"/>
              </div>
              <div class="content">
                <div class="main">
                  <h3 class="name"><%= task.user.email.split("@")[0]%></h3>
                  <p class="profession"><%= task.description %></p>
                  <p class="text-center">

                    <% if task.priority==1%>
                      <%= 'Not that urgent' %>
                    <% elsif task.priority==2%>
                      <%= 'Quite urgent' %>
                    <% else %>
                      <%= 'Priority: Super urgent' %>
                    <% end %></p>
                  <p><%= 'Status: '+task.status %></p>
                </div>

               </div> <!-- This closes content -->
               <div class="footer">
                 <i class="fa fa-mail-forward"></i> See Comments
               </div>
            </div> <!-- This closes front -->
            <div class="back">
               <div class="comments_header">
                 <h5 class="comments_title">Comments</h5>
               </div>
               <div class="content">
                   <div class="main">
                     <div class="all_comments">
                         <% if task.comments.any?  %>
                           <% task.comments.all.each do |comment| %>

                                   <h4 class="text-center"><span class="profession"> <%= task.user.email.split("@")[0]%></span> <%= +": "+comment.comments %></h4>
                                   <% end %>
                          <% else%>
                            <span class="no_comments">No Comments Yet</span>
                          <% end %>
                     </div>
                       <div class="stats-container">
                         <%= form_for [task, task.comments.new] do |t| %>
                           <%= t.label :comment %>
                           <%= t.text_field :comments, :class=>"form_description_box" %>
                           <%= t.submit 'Add comment', :class=>"button" %>
                         <% end %>
                         <br>
                         <%= form_for [task] do |r| %>
                           <%= r.submit 'Change status', :class=>"button" %>
                         <% end %>
                         <br>
                         <%= form_tag(controller: "tasks", action: "calendar", method: "post") do%>
                           <%= hidden_field_tag 't_id', task.id %>
                           <%= submit_tag 'Add to calendar', data: {id: "#{task.id}"}, :class=>"button" %>
                         <% end %>
                         <% if task.user == current_user %>
                           <%= link_to image_tag("trash.png", class: "trash"), task_path(task), method: :delete, class: 'remove' %>
                         <% end %>
                       </div> <!-- This closes stats container -->
                     </div> <!-- This closes main -->
                 </div>  <!-- This closes content -->
             </div> <!-- This closes back -->

          </div> <!-- This closes card -->
    </div> <!-- This closes card deck -->
  </div>
    <% end %> <!-- This closes iterator -->
  </div> <!-- This closes row -->

  </div> <!-- This closes row -->
</div> <!-- This closes container -->
<% else %>
  <h1>No tasks were created yet</h1>
<% end %> <!-- This closes if statement -->
