
<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div class="calendar-task<%= Task.find(event.task_id).priority %>">
       <%= Task.find(event.task_id).description %>
    </div>
  <% end %>
<% end %>

<% if !@events.all.any? %>
<div class="no_tasks_yet">  <%="No tasks have been added to the calendar yet"%> </div>
<%end %>
