
<div class="container">

<div class="login_form_title">
   Sign Up
</div>
<br>

</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-xs-3"></div>
    <div class="col-md-4 col-xs-6">

      <div class="login_form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <br>

          <div class="field">
            <%= f.label :username %><br />
            <%= f.text_field :username %>
          </div>
          <br>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true , :class=>"form_description_box"%>
          </div>
          <br>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", :class=>"form_description_box"%>
          </div>
          <br>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form_description_box" %>
          </div>
          <br>

          <div class="actions">
            <%= f.submit "Sign up", :class=>"btn btn-primary" %>
          </div>
        <% end %>
        <br>

        <%= render "devise/shared/links" %>
        <br>

      </div>
    </div>
  </div>
</div>
